@model HospitalManagementSystem.ViewModel.PatientViewModel.UpdatePatientViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add New Patient";
}
<h2 class="my-4">Update Patient</h2>

@using (Html.BeginForm("UpdatePatient", "Patient", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PatientId)

    <div class="form-group mb-3 w-25">
        @Html.LabelFor(model => model.PatientName, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.PatientName, new { @class = "form-control", placeholder = "Name" })
        @Html.ValidationMessageFor(model => model.PatientName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Address, new { @class = "form-label" })
        @Html.EditorFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Number, new { @class = "form-label" })
        @Html.EditorFor(model => model.Number, new { @class = "form-control", placeholder = "PhoneNumber" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Age, new { @class = "form-label" })
        @Html.EditorFor(model => model.Age, new { @class = "form-control", placeholder = "Age" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "form-label" })
        @Html.DropDownListFor(model => model.Gender, new SelectList(new[]
                {
    new SelectListItem { Text = "Select Gender", Value = "" },
    new SelectListItem { Text = "Male", Value = "Male" },
    new SelectListItem { Text = "Female", Value = "Female" },
    new SelectListItem { Text = "Other", Value = "Other" }
    }, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Description, new { @class = "form-label" })
        @Html.EditorFor(model => model.Description, new { @class = "form-control", placeholder = "Discription" })
    </div>
    

    <button type="submit" class="btn btn-primary">Update Patient</button>
}