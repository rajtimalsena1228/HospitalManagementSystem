@model HospitalManagementSystem.ViewModel.DoctorViewModel.UpdateDoctorViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update Doctor";
}
<h2 class="my-4">Update Doctor</h2>

@using (Html.BeginForm("UpdateDoctor", "Doctor", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
{

    <div style="font-family: Arial, sans-serif; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 8px; background-color: #f9f9f9;">
        @using (Html.BeginForm("Update", "Doctor", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.DoctorId)

            <div class="form-group mb-3 w-25">
                @Html.LabelFor(model => model.DoctorName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(model => model.DoctorName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Address, new { @class = "form-label" })
                @Html.EditorFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Number, new { @class = "form-label" })
                @Html.EditorFor(model => model.Number, new { @class = "form-control", placeholder = "PhoneNumber" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(model => model.Gender, new SelectList(new[]
                         {
        new SelectListItem { Text = "Select Gender", Value = "" },
        new SelectListItem { Text = "Male", Value = "Male" },
        new SelectListItem { Text = "Female", Value = "Female" },
        new SelectListItem { Text = "Other", Value = "Other" }
        }, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Description, new { @class = "form-label" })
                @Html.EditorFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.ImageURL, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control", placeholder = "Image URL" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Faculty, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Faculty, new { @class = "form-control", placeholder = "Faculty" })
            </div>

            <button type="submit" class="btn btn-primary">Update Doctor</button>
        }
    </div>
    
}
