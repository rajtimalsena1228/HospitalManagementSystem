@model HospitalManagementSystem.ViewModel.DoctorViewModel.AddDoctorViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Doctor Info";
}

<h1 class="text-center mb-4" style="font-weight: bold; color: #007bff;">Doctor Information</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="background-color: #f8f9fa; border-radius: 15px;">
                <div class="card-body">
                    @using (Html.BeginForm("AddDoctor", "Doctor", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DoctorId, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.DoctorId, new { @class = "form-control", placeholder = "Enter doctor's ID" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.DoctorName, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control", placeholder = "Enter doctor's name" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.Gender, new SelectList(new[]
                                     {
                        new SelectListItem { Text = "Select Gender", Value = "" },
                        new SelectListItem { Text = "Male", Value = "Male" },
                        new SelectListItem { Text = "Female", Value = "Female" },
                        new SelectListItem { Text = "Other", Value = "Other" }
                        }, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Short address" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", placeholder = "Enter doctor's Description" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Number, new { @class = "form-control", type = "tel", placeholder = "Enter doctor's phone number" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control", placeholder = "Enter doctor's image URL" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Faculty, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Faculty, new { @class = "form-control", placeholder = "Enter doctor's faculty" })
                        </div>

                        <button type="submit" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Register</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
