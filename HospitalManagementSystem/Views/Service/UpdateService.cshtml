@model HospitalManagementSystem.ViewModel.ServiceViewModel.UpdateServiceViewModel;

<div style="font-family: Arial, sans-serif; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 8px; background-color: #f9f9f9;">
    @using (Html.BeginForm("Update", "Service", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ServiceId) <!-- Assuming there's a ServiceId property in the Service model -->

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.ServiceName, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Description, new { @class = "form-label" })
            @Html.EditorFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.ImageURL, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control", placeholder = "Image URL" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Price, new { @class = "form-label" })
            @Html.EditorFor(model => model.Price, new { @class = "form-control", placeholder = "Additional Price" })
        </div>

        <button type="submit" class="btn btn-primary">Update Service</button>
    }
</div>


<div class="d-flex justify-content-end">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">First Page</a>
    </<div>
